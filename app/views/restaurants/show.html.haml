%p= @restaurant.name
%p= @restaurant.description
%p Average rating: #{@restaurant.average_rating}
- if @restaurant.reviews.any?
  - @restaurant.reviews.each do |review|
    %p  #{review.thoughts}
    %p #{review.rating}
    = link_to 'Endorse Review', review_endorsements_path(review), method: :post, class: 'endorsements-link'
    %span.endorsements_count= review.endorsements.count
    = 'endorsement'.pluralize review.endorsements.count
    = link_to 'Delete Review', review_path(review), method: :delete
- else
  %h3 No reviews yet
